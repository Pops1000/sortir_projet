{% extends 'base.html.twig' %}
{% block title %}Sortie Details{% endblock %}
{% block body %}
    <div class="example-wrapper ">
        <div class="container">
            <h1 class="text-center">Afficher une sortie</h1>
            <div class="row">
                <div class="col-md-3">
                    <p>Nom de la sortie:</p>
                    <p>Date et heure de la sortie:</p>
                    <p>Date limite de l'inscription:</p>
                    <p>Nombre de places:</p>
                    <p>Durée:</p>
                    <p>Description et infos:</p>
                </div>
                <div class="col-md-3">
                    <p>{{ sortie.nom }}</p>
                    <p>{{ sortie.dateHeureDebut|date("d/m/Y H:i") }}</p>
                    <p>{{ sortie.dateLimiteInscription|date("d/m/Y") }}</p>
                    <p>{{ sortie.nbInscriptionsMax }}</p>
                    <p>{{ sortie.duree }} minutes </p>
                    <p>{{ sortie.infosSortie }}</p>
                </div>
                <div class="col-md-3">
                    <p>Campus:</p>
                    <p>Lieu:</p>
                    <p>Rue:</p>
                    <p>Code postal:</p>
                    <p>Latitude:</p>
                    <p>Longitude:</p>
                </div>
                <div class="col-md-3">
                    <p>{{ sortie.campus.nom }}</p>
                    <p>{{ sortie.lieu.nom }}</p>
                    <p>{{ sortie.lieu.latitude }}</p>
                    <p>{{ sortie.lieu.longitude }}</p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <table class="table table-stripped table-hover table-bordered">
                        <thead class="thead-dark">
                        <tr>
                            <th>Pseudo</th>
                            <th>Nom</th>
                        </tr>
                        </thead>
                        <tbody id="tableau">
                        {% for participant in sortie.participants %}
                            <tr>
                                <td>
                                    <a href="{{ path('app_profile_display', {'id': participant.id}) }}">{{ participant.pseudo }}</a>
                                </td>
                                <td>
                                    {{ participant.nom }} {{ participant.prenom }}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

        </div>

        <div class="text-center">
            <a href="{{ path('app_sorties') }}" class="btn btn-primary">Retour à la liste des sorties</a>
        </div>
    </div>

{% endblock %}
