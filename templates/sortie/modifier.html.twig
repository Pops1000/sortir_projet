{% extends 'base.html.twig' %}

{% block title %}Modifier la sortie - {{ sortie.nom }}{% endblock %}
{% form_theme sortieForm "bootstrap_3_layout.html.twig" %}

{% block titre %}
    Modifier la sortie: {{ sortie.nom }}
{% endblock %}
{% block body %}
    {{ form_start(sortieForm) }}
    {{ form_row(sortieForm.nom) }}
    {{ form_row(sortieForm.dateHeureDebut) }}
    {{ form_row(sortieForm.duree) }}
    {{ form_row(sortieForm.dateLimiteInscription) }}
    {{ form_row(sortieForm.nbInscriptionsMax) }}
    {{ form_row(sortieForm.infosSortie) }}
    {{ form_row(sortieForm.lieu) }}
{% endblock %}
{% block footer %}
    <button type="submit" class="btn btn-success">Enregistrer</button>
    {%  if sortie.etat.libelle == "Cr√©e" %}
        <a href="{{ path('sortie_publier', {'id': sortie.id}) }}" class="btn btn-success">Publier la sortie</a>
    {%  endif %}
    <a  href="{{ path('sortie_supprimer', {'id': sortie.id}) }}" class="btn btn-danger">Supprimer la sortie</a>
    <a  href="{{ path('app_sorties') }}" class="btn btn-warning">Annuler</a>
    {{ form_end(sortieForm) }}
{% endblock %}

