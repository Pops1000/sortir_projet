{% extends 'base.html.twig' %}

{% block title %}Hello SortieController!{% endblock %}
{% form_theme creationSortie "bootstrap_3_layout.html.twig" %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Creation d'une sortie</h1>

        {{ form_start(creationSortie) }}
        {{ form_row(creationSortie.nom) }}
        {{ form_row(creationSortie.dateHeureDebut)}}
        {{ form_row(creationSortie.duree) }}
        {{ form_row(creationSortie.dateLimiteInscription) }}
        {{ form_row(creationSortie.nbInscriptionsMax) }}
        {{ form_row(creationSortie.infosSortie) }}
        {{ form_row(creationSortie.lieu) }}

        <button type="submit">Enregistrer</button>

        {{ form_end(creationSortie) }}

</div>
{% endblock %}
